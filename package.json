{
  "name": "coloretto",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"pnpm --filter coloretto-backend start:dev\" \"pnpm --filter frontend dev\"",
    "build": "pnpm --filter coloretto-backend build && pnpm --filter frontend build",
    "test": "pnpm --filter coloretto-backend test && pnpm --filter frontend test"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "pnpm": {
    "overrides": {
      "vite": "npm:rolldown-vite@7.2.2"
    },
    "onlyBuiltDependencies": [
      "@swc/core",
      "esbuild"
    ]
  }
}
